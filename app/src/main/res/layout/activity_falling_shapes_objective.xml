<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <cs371m.alarming.FallingShapesBoard
        android:id="@+id/falling_shapes_board"
        android:layout_width="327dp"
        android:layout_height="290dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/count_shapes_title"
        app:layout_constraintHorizontal_bias="0.514" />

    <Button
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="30dp"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/shapes_counter"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/falling_shapes_board" />

    <Button
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="30dp"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/shapes_counter"
        android:layout_marginRight="8dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/falling_shapes_board" />

    <TextView
        android:id="@+id/count_shapes_title"
        android:layout_width="374dp"
        android:layout_height="42dp"
        android:layout_marginTop="7dp"
        android:text="Falling Shapes"
        android:textSize="30dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.571" />

    <TextView
        android:id="@+id/shapes_counter"
        android:layout_width="53dp"
        android:layout_height="31dp"
        android:layout_marginTop="0dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_falling_shapes" />

    <Button
        android:id="@+id/start_falling_shapes"
        android:layout_width="81dp"
        android:layout_height="37dp"
        android:layout_marginTop="0dp"
        android:text="RETRY"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/falling_shapes_board" />

    <Button
        android:id="@+id/submit_falling_shapes_count"
        android:layout_width="82dp"
        android:layout_height="37dp"
        android:layout_marginBottom="59dp"
        android:text="SUBMIT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/demo_falling_shapes"
        android:layout_width="92dp"
        android:layout_height="41dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:text="DEMO"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/submit_falling_shapes_count"
        app:layout_constraintRight_toRightOf="@+id/submit_falling_shapes_count" />

</android.support.constraint.ConstraintLayout>