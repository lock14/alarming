<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs371m.alarming.MathObjective">

    <TextView
        android:id="@+id/operand1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17"
        android:textSize="90sp"
        android:layout_marginBottom="-1dp"
        app:layout_constraintBottom_toTopOf="@+id/operand2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.67" />

    <TextView
        android:id="@+id/operand2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35"
        android:textSize="90sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/answer_text"
        app:layout_constraintLeft_toRightOf="@+id/operator"
        android:layout_marginLeft="12dp" />

    <EditText
        android:id="@+id/answer_text"
        android:layout_width="244dp"
        android:layout_height="118dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:textSize="90sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="42dp"
        app:layout_constraintVertical_bias="0.547"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/operator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/division_symbol"
        android:textSize="90sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/answer_text"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/math_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="submitAnswer"
        android:text="Enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/answer_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.617" />

</android.support.constraint.ConstraintLayout>
